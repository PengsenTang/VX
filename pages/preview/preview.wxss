/* pages/preview/preview.wxml.wxss */
page {
  height: 100%;
}
.preview{
  width: 70%;
  align-items: center;
  padding: 0;
  position: relative;
  border-left:15px solid #ffffff;
  border-right:15px solid #ffffff;
  background-color:#ffffff;
  box-shadow:2px 2px 10px #333333;
  transform: rotate(-5deg);  
}
.container{
  margin: 0;
  height: 100%;
  padding-top: 30%;
  background-color: #f4eede;
}
.image-preview{
  width: 100%;
  padding-top: 20px;
}
.image-preview image{
  padding-top: 20px;
}
.flex-input{
  display: flex;
  flex-direction: column;
}
.desc{
  display: flex;
  flex-direction: row;
}
.desc input{
  height: 2.4rem;
  width: 100%;
  font-size: 20px;
}
.comment{
  display: flex;
  flex-direction: row;
}
.comment input{
  width: 100%;
  font-size: 14px;
  padding-bottom: 30px;
}
.logo {
  height: 48px;
  width: 48px;
  position: absolute;
  right: 0;
  bottom: 30px;
  transform: rotate(25deg);
}
.logo image{
  height: 100%;
  width: 100%;
}
.send {
  height: 48px;
  width: 48px;
  position: absolute;
  top: -25px;
  left: -40px;
}
.send image{
  height: 100%;
  width: 100%;
}